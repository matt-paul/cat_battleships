<div>
<div id="numbers">
  <% ("A".."J").to_a.each do |number| %>
  <div class="number"><%= number %></div>
  <% end %>
</div>


<div id="abc">
  <% (1..10).to_a.each do |letter| %>
  <div class="letter"><%= letter %></div>
  <% end %>
</div>


<!---v represents the value in the @grid hash, in this case cell --->
  <div class="container">
    <% $board.grid.each do |k,v| %>
      <% if v.content.is_a?(Ship) %>
        <% if v.hit? %>
          <div id = <%= k.to_s %> class="ship_hit"></div>
        <% else %>
          <div id = <%= k.to_s %> class="ship"></div>
        <% end %>
      <% else %>
        <% if v.hit? %>
          <div id = <%= k.to_s %> class="water">Miss!</div>
        <% else %>
          <div id = <%= k.to_s %> class="water"></div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
